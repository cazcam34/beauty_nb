<div class="wrapper">
  <div class="container">
    <h1>Search</h1>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= form_tag products_path, { method: :get, id: "search-form" } do %>
          <%= text_field_tag :query,
          params[:query],
          class: "search-bar",
          placeholder: "e.g. Organic face serum"
          %>
          <%= submit_tag 'Search', class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
    <div class="products-container">
      <h1>Results</h1>
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <h3><%= product.name  %></h3>
              <p><%= product.description %></p>
              <p>$ <%= product.price %></p>
              <%= link_to "link to product", product_path(product), class: 'card-link' %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>





