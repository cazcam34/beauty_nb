<div class="wrapper">
  <div class="container">
    <h1>Search</h1>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= form_tag products_path, { method: :get, id: "search-form" } do %>
          <%= text_field_tag :query,
          params[:query],
          class: "search-bar",
          placeholder: "e.g. Organic face serum"
          %>
          <%= submit_tag 'Search', class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
    <div class="products-container">
      <h1>Results</h1>
        <div class="cards-container row">
          <% @products.each do |product| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <div class="card-img" style="background-image: url('<%= cl_image_path product.photo, crop: :fill %>');">

              </div>
              <div class="card-content">
                <div class="content-header">
                  <h4><%= product.name  %></h4>
                </div>
                <div class="content-footer">
                  <p><strong>$ <%= product.price %></strong></p>
                </div>
              </div>
            <%= link_to "", product_path(product), class: 'card-link' %>
            </div>
          </div>
          <% end %>
        </div>
    </div>
  </div>
</div>





