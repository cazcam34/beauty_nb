<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <i class="far fa-eye"></i>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Sign In", user_session_path, :method => 'post', class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Register", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Sign In", user_session_path, :method => 'post', class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Register", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  </div>
</div>
<div class="wrapper">
	<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 90%), url('https://images.unsplash.com/photo-1503236823255-94609f598e71');">
		<div class="container">
			<div class="banner-content">
		    <h1>BeautyNB</h1>
		    <p>Artisan beauty products, made locally.</p>
		    <div class="row">
		    	<div class="col-xs-12 col-md-6 col-md-offset-3">
	    			<%= form_tag products_path, { method: :get, id: "search-form" } do %>
						<%= text_field_tag :query,
						  params[:query],
						  class: "search-bar",
						  placeholder: "e.g. Organic face serum"
						%>
						<%= submit_tag 'Search', class: "btn btn-primary btn-lg" %>
					<% end %>
		    	</div>
		    </div>
		  </div>
		</div>
	</div>
	<div class="container">
	 <div class="home-content-why text-center">
	  	<div class="row">
	  		<div class="col-xs-12 col-sm-4 value-card">
	  			<i class="fas fa-check"></i>
	  			<h4>Unique Everything</h4>
	  			<p>We have hundreds of one-of-a-kind beauty items, so you can find whatever you need (or really, really want).</p>
	  		</div>
	  		<div class="col-xs-12 col-sm-4 value-card">
	  			<i class="fas fa-check"></i>
	  			<h4>Independent sellers</h4>
	  			<p>Buy directly from someone who put their heart and soul into making something special.</p>
	  		</div>
	  		<div class="col-xs-12 col-sm-4 value-card">
	  			<i class="fas fa-check"></i>
	  			<h4>Secure shopping</h4>
	  			<p>We use best-in-class technology to protect your transactions.</p>
	  		</div>
	  	</div>
	  </div>
	</div>
</div>

