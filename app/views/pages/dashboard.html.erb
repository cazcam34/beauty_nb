<div class="wrapper">
	<div class="container">
		<div class="search-container">
			<h1>Search</h1>
			<%= render 'shared/search' %>
		</div>
		<div class="products-container">
	      <h1>Buy again</h1>
	        <div class="cards-container row">
	          <% @fav_products.each do |product| %>
	            <%= render "shared/card-full", product: product %>
	          <% end %>
	        </div>
	    </div>
		<div class="products-container">
	      <h1>Popular</h1>
	        <div class="cards-container row">
	          <% @popular_products.each do |product| %>
	          	<%= render "shared/card-full", product: product %>
	          <% end %>
	        </div>
	    </div>
	</div>
</div>
